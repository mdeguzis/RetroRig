                <posx>0</posx>
                <posy>0</posy>
                <width>8-col-gutter</width>
                <align>left</align>
                <font>pageTitle</font>
                <textcolor>black</textcolor>
                <label>$INFO[ListItem.Artist]</label>
				<scroll>true</scroll>
				<shadowcolor>-</shadowcolor>
            </control>
			 <control type="label">
                    <posx>0</posx>
                    <posy>42</posy>
                    <width>8-col-gutter</width>
                    <align>left</align>
                    <font>itemTitleSmall</font>
                    <textcolor>black</textcolor>
                    <label>$INFO[ListItem.genre]</label>
